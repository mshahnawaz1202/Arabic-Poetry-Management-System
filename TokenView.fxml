<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.controller.TokenController"
            prefHeight="750.0" prefWidth="1200.0"
            style="-fx-background-color: #f3eadb;"> <!-- Arabic parchment -->

    <!-- TOP HEADER -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #e6d5b8, #d9c3a3);
                     -fx-effect: dropshadow(gaussian, rgba(80,60,40,0.3), 15, 0, 0, 2);">
            <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

            <Label text="Token Processing"
                   textFill="#4b2e19"
                   style="-fx-font-weight: bold;">
                <font><Font size="28"/></font>
            </Label>

            <Label text="Tokenize verses, browse tokens, and manage token database"
                   textFill="#6b4b31">
                <font><Font size="14"/></font>
            </Label>
        </VBox>
    </top>

    <center>
        <HBox spacing="0" HBox.hgrow="ALWAYS">

            <!-- LEFT PANEL -->
            <VBox spacing="20"
                  style="-fx-background-color: #fcf8f3;
                         -fx-border-color: #ccb89d;
                         -fx-border-width: 0 1 0 0;"
                  prefWidth="380">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

                <Label text="ACTIONS"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: #8a694a;
                              -fx-font-weight: bold;
                              -fx-letter-spacing: 1.2;"/>

                <VBox spacing="12">
                    <Button fx:id="tokenizeAllBtn" text="Tokenize All Verses"
                            onAction="#handleTokenizeAll"
                            maxWidth="Infinity"
                            style="-fx-background-color: #c8ac88; -fx-text-fill: #3b2a1f;
                                   -fx-font-size: 13px; -fx-font-weight: bold;
                                   -fx-background-radius: 6; -fx-padding: 12;"/>

                    <Button fx:id="tokenizeAndSaveBtn" text="Tokenize &amp; Save All"
                            onAction="#handleTokenizeAndSave"
                            maxWidth="Infinity"
                            style="-fx-background-color: #a88965; -fx-text-fill: white;
                                   -fx-font-size: 13px; -fx-font-weight: bold;
                                   -fx-background-radius: 6; -fx-padding: 12;"/>

                    <Button fx:id="loadTokensBtn" text="Load All Tokens"
                            onAction="#handleLoadAllTokens"
                            maxWidth="Infinity"
                            style="-fx-background-color: #d99832; -fx-text-fill: white;
                                   -fx-font-size: 13px; -fx-font-weight: bold;
                                   -fx-background-radius: 6; -fx-padding: 12;"/>

                    <Separator style="-fx-background-color: #ccb89d;"/>

                    <Label text="Load by Verse ID"
                           style="-fx-text-fill: #4b2e19; -fx-font-weight: bold;"/>
                    <HBox spacing="10">
                        <TextField fx:id="verseIdField" promptText="Verse ID"
                                   style="-fx-background-color: #f7f1e8;
                                          -fx-border-color: #b89f7a;
                                          -fx-padding: 8; -fx-border-radius: 4;"/>
                        <Button text="Go" onAction="#handleLoadByVerseId"
                                style="-fx-background-color: #8b5cf6; -fx-text-fill: white;
                                       -fx-padding: 10; -fx-background-radius: 6;"/>
                    </HBox>

                    <Separator style="-fx-background-color: #ccb89d;"/>

                    <Button fx:id="editBtn" text="Edit Token"
                            maxWidth="Infinity"
                            style="-fx-background-color: #6b4b31; -fx-text-fill: white;
                                   -fx-font-size: 13px; -fx-font-weight: bold;
                                   -fx-background-radius: 6; -fx-padding: 12;"/>

                    <Separator style="-fx-background-color: #ccb89d;"/>

                    <Button fx:id="deleteAllBtn" text="Delete All Tokens"
                            onAction="#handleDeleteAll"
                            maxWidth="Infinity"
                            style="-fx-background-color: #b14545; -fx-text-fill: white;
                                   -fx-font-size: 13px; -fx-font-weight: bold;
                                   -fx-background-radius: 6; -fx-padding: 12;"/>
                </VBox>
            </VBox>

            <!-- RIGHT PANEL -->
            <VBox spacing="15" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: #f3eadb;">

                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label text="TOKENS LIST"
                           style="-fx-font-size: 12px; -fx-text-fill: #8a694a;
                                  -fx-font-weight: bold; -fx-letter-spacing: 1.2;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="statusLabel" text=""
                           style="-fx-text-fill: #6b4b31; -fx-font-size: 13px;"/>
                </HBox>

                <TableView fx:id="tokensTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: #fcf8f3;
                                  -fx-border-color: #ccb89d;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="verseIdColumn" text="Verse ID" prefWidth="100"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="tokenColumn" text="Token" prefWidth="250"/>
                        <TableColumn fx:id="positionColumn" text="Position" prefWidth="100"
                                     style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

            </VBox>
        </HBox>
    </center>
</BorderPane>
