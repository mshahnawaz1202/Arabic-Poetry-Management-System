<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="pl.controller.PoemController"
            prefHeight="750.0" prefWidth="1200.0"
            style="-fx-background-color: #f5f7fa;">
    
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #6366f1, #8b5cf6); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            <Label fx:id="bookTitleLabel" text="Manage Poems" textFill="white">
                <font>
                    <Font name="System" size="28"/>
                </font>
            </Label>
            <Label text="Organize poems within your collection" textFill="#e0e7ff">
                <font>
                    <Font size="14"/>
                </font>
                <VBox.margin>
                    <Insets top="5"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    
    <center>
        <HBox spacing="0" HBox.hgrow="ALWAYS">
            
            <!-- Left Panel: Poem Operations -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 0 1 0 0;"
                  prefWidth="400">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <Label text="POEM DETAILS" 
                       style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: bold; -fx-letter-spacing: 1.2;"/>
                
                <VBox spacing="15">
                    <Label text="Title" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: 500;"/>
                    <TextField fx:id="poemTitleField" promptText="Enter poem title" 
                               style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                    
                    <Label text="Poet" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: 500;">
                        <VBox.margin>
                            <Insets top="5"/>
                        </VBox.margin>
                    </Label>
                    <ComboBox fx:id="poetComboBox" promptText="Select a poet" maxWidth="Infinity"
                              style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                </VBox>
                
                <Separator style="-fx-background-color: #e2e8f0;">
                    <VBox.margin>
                        <Insets top="10" bottom="10"/>
                    </VBox.margin>
                </Separator>
                
                <Label text="ACTIONS" 
                       style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: bold; -fx-letter-spacing: 1.2;"/>
                
                <VBox spacing="12">
                    <Button fx:id="addPoemBtn" text="Add Poem" onAction="#handleAddPoem"
                            maxWidth="Infinity"
                            style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                    
                    <Button fx:id="updatePoemBtn" text="Update Selected Poem" onAction="#handleUpdatePoem"
                            maxWidth="Infinity"
                            style="-fx-background-color: #0ea5e9; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                    
                    <Button fx:id="deletePoemBtn" text="Delete Selected Poem" onAction="#handleDeletePoem"
                            maxWidth="Infinity"
                            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                    
                    <Separator style="-fx-background-color: #e2e8f0;">
                        <VBox.margin>
                            <Insets top="5" bottom="5"/>
                        </VBox.margin>
                    </Separator>
                    
                    <Button fx:id="viewVersesBtn" text="View Verses →" onAction="#handleViewVerses"
                            maxWidth="Infinity"
                            style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                    
                    <Button fx:id="managePoetsBtn" text="Manage Poets" onAction="#handleManagePoets"
                            maxWidth="Infinity"
                            style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                    
                    <Button fx:id="refreshBtn" text="↻ Refresh" onAction="#handleRefresh"
                            maxWidth="Infinity"
                            style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-radius: 6; -fx-padding: 12; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
            
            <!-- Right Panel: Poems Table -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: #f5f7fa;">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="POEM COLLECTION" 
                           style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: bold; -fx-letter-spacing: 1.2;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="statusLabel" text="" 
                           style="-fx-font-size: 12px; -fx-font-weight: 500;"/>
                </HBox>
                
                <TableView fx:id="poemsTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="poemIdColumn" text="ID" prefWidth="60" 
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="poemTitleColumn" text="Title" prefWidth="350"/>
                        <TableColumn fx:id="poetIdColumn" text="Poet ID" prefWidth="100" 
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100" 
                                     style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>
</BorderPane>